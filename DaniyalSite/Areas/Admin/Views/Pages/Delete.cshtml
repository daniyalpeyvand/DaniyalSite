@model DataLayer.Page

@{
	ViewBag.Title = "Delete";
}
<link href="~/Content/Delete.css" rel="stylesheet" />
<br />
<br />
<h3>آیا از حذف خبر "@Model.Title"اطمینان دارید؟</h3>
<div>
	<hr />
	<dl class="dl-horizontal">
		<dt>
			@Html.DisplayNameFor(model => model.pageGroup.GroupTitle)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.pageGroup.GroupTitle)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Title)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Title)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.ShortDescription)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.ShortDescription)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Visit)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Visit)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.ImageName)
		</dt>

		<dd>
			@if (Model.ImageName != null)
			{
				<img src="~/PageImages/@Model.ImageName" class="thumbnail" style="max-width:150px" />
			}
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.ShowSlider)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.ShowSlider)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.CreateDate)
		</dt>

		<dd>
			@Model.CreateDate.ToShamsi()
		</dd>

	</dl>

	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()

		<div class="form-actions no-color">
			<input type="submit" value="حذف" class="btn btn-danger" /> |

			<div class="form-actions no-color" style="font-size:16px;float:left">
				@Html.ActionLink("بازگشت", "Index")
			</div>
		</div>
	}
</div>
