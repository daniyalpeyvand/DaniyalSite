<!DOCTYPE html>
<html class="no-js" dir="rtl" lang="fa-IR">
<head>
	<meta charset="UTF-8">
	<title> سایت خبری دانیال </title>
	<base href="">
	<meta name="googlebot" content="index,follow">
	<meta name="robots" content="noodp,noydir">
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" type="text/css" href="/Content/UI/css/bootstrap.min.css">
	<link rel="stylesheet" type="text/css" href="/Content/UI/css/bootstrap-rtl.min.css">
	<link rel="stylesheet" type="text/css" href="/Content/UI/css/font-awesome.min.css">
	<link rel="stylesheet" type="text/css" href="/Content/UI/css/owl.carousel.css">
	<link rel="stylesheet" type="text/css" href="/Content/UI/css/style.css">
	<script src="/Content/UI/js/jquery.min.js"></script>
</head>
<body>
	<script src="/Content/UI/js/modernizr.js"></script>

	<!-- Top Menu -->
	<div class="top-menu">
		<div class="container">
			<div class="row">
				<div class="col-md-6 col-sm-6 col-xs-5">
					<ul>
						<li><a href=""><i class="fa fa-home"></i></a></li>
						<li><a href=""><i class="fa fa-question-circle"></i></a></li>
						<li><a href=""><i class="fa fa-envelope"></i></a></li>
					</ul>
				</div>
				<div class="col-md-6 col-sm-6 col-xs-7">
					<span>امروز : @DateTime.Now.ToShamsi()</span>
				</div>
			</div>
		</div>
	</div>
	<!-- End Top Menu -->
	<!-- header -->
	<header class="main-header" style="background-color:#363636">
		<div class="container">
			<div class="row">
				<div class="col-md-6 col-sm-6 col-xs-12">
					<a href="" class="logo"><img src="/Content/UI/img/download.jpg" alt="" title=""></a>
					<div class="left-side">
						<h1 style="color:black"><a href="/" tyle="color:black">سایت خبری دانیال</a></h1>
						<h2 style="color:#828282"> پایگاه اطلاع رسانی و خبری</h2>
					</div>
					<div class="clearfix"></div>
				</div>
				<div class="col-md-6 col-sm-6 col-xs-12">
					<form action="/Search" method="get" class="border-radius">
						<input class="border-radius" name="q" type="text" placeholder=" جستجو کنید ... ">
						<button><i class="fa fa-search"></i></button>
					</form>
				</div>
			</div>
		</div>
	</header>
	<!-- End Header -->
	<!-- menu -->
	<nav class="main-menu">
		<div class="container">
			<span><i class="fa fa-th-list"></i></span>
			<ul>
				<li><a href="/"> صفحه اصلی </a></li>
				<li><a href="/Archive"> آرشیو خبرها </a></li>
				@if (User.Identity.IsAuthenticated)
				{
					<li><a href="">@User.Identity.Name خوش آمدید </a></li>
					<li><a href="/Account/SignOut"> خروج از حساب کاربری </a></li>
				}
				else
				{
					<li><a href="/Account/Login"> ورود به سایت </a></li>
					
				}
				<li>
					@Html.Action("GroupsMenu", "News")
				</li>
			</ul>
		</div>
	</nav>
	<!-- End menu -->

	<div class="container margin-top-30">
		<div class="row">

			<aside class="col-md-4 col-sm-12 col-xs-12 pull-right">

				@if (User.Identity.IsAuthenticated)
				{
				<div class="thumbnail">
					<ul>
						<li>
							<a href="/Admin/PageGroups">مدیریت عناوین</a>
						</li>
						<li>
							<a href="/Admin/Pages">مدیریت اخبار</a>
						</li>
					</ul>
				</div>
				}

				@Html.Action("ShowGroups", "News")
				<!-- most views news -->
				@Html.Action("TopNews","News")
				<!-- end most views news -->
			</aside>


			<div class="col-md-8 col-sm-12 col-xs-12 ">
				
				@RenderBody()
			</div>


		</div>
	</div>

	<footer>
		<div class="container">
			<div class="row">
				<div class="col-md-6 col-sm-12 col-xs-12">
					<section class="access-links">
						<header> دسترسی سریع </header>
						<ul>
							<li><a href=""> صفحه اصلی </a></li>
							<li><a href=""> قوانین سایت  </a></li>
							<li><a href=""> راهنمای سایت  </a></li>
							<li><a href=""> پیوندهای سایت </a></li>
							<li><a href=""> صفحه اصلی </a></li>
							<li><a href=""> قوانین سایت  </a></li>
							<li><a href=""> صفحه اصلی </a></li>
							<li><a href=""> قوانین سایت  </a></li>
							<li><a href=""> راهنمای سایت  </a></li>
						</ul>
					</section>
				</div>
				<div class="col-md-5 col-md-offset-1 col-sm-12 col-xs-12">
					<div class="socials">
						<span> شبکه های اجتماعی  سایت</span>
						<a href=""><i class="fa fa-facebook"></i></a>
						<a href=""><i class="fa fa-twitter"></i></a>
						<a href=""><i class="fa fa-paper-plane"></i></a>
						<a href=""><i class="fa fa-google-plus"></i></a>
						<div class="clearfix"></div>
					</div>
					<p>
						تمامی حقوق مادی و معنوی این سایت متعلق به دانیال پیوند بوده و کپی برداری از آن پیگرد قانونی دارد
					</p>
				</div>
			</div>
		</div>
	</footer>

	<script src="/Content/UI/js/bootstrap.min.js"></script>
	<script src="/Content/UI/js/owl.carousel.js"></script>
	<script src="/Content/UI/js/script.js"></script>
	@RenderSection("scripts" , false)
</body>
</html>

